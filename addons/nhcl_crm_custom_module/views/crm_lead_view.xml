<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="custom_crm_form_view" model="ir.ui.view">
            <field name="name">custom.crm.form.view</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='lead']" position="after">
                    <page string="Other Information" name="other_information">
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="project_id"/>
                            </group>
                            <group>
                                <field name="source"/>
                                <field name="sub_source"/>
                                <field name="received_on"/>
                            </group>
                        </group>
                    </page>
                    <page string="Sub Sources" name="sub_sources">
                        <field name="sub_source_ids" readnly="1">
                            <tree editable="bottom" create="0">
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>